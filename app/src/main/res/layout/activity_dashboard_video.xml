<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".dashboardVideo">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- VideoView -->
        <VideoView
            android:id="@+id/videoViewBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <!-- Contents inside the CardView -->

        <androidx.cardview.widget.CardView
            android:id="@+id/homeDash"
            android:layout_width="155dp"
            android:layout_height="157dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="400dp"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            app:cardCornerRadius="40dp"
            app:cardElevation="51dp"
            app:cardMaxElevation="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/nav_home" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/aboutDash"
            android:layout_width="155dp"
            android:layout_height="157dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="340dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="300dp"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            app:cardCornerRadius="40dp"
            app:cardElevation="51dp"
            app:cardMaxElevation="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/nav_about" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="155dp"
            android:layout_height="157dp"
            android:id="@+id/shareDash"
            android:layout_marginStart="190dp"
            android:layout_marginTop="510dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="400dp"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            app:cardCornerRadius="40dp"
            app:cardElevation="51dp"
            app:cardMaxElevation="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/nav_share" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- NavigationView -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
