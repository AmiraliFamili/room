<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notes_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2_op"
    tools:context=".Notes">

    <!-- Main content layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@color/grey">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/navigation_menu_icon"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="@color/white" />

        <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#000"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#2E6A84"
        android:textSize="30sp">

    </TextView>

    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="#000"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#50606B"
        android:textSize="50sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/bac"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1E1E1E"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="AC"
                        android:textColor="@color/Note2"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/bc"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1E1E1E"
                        android:gravity="center"
                        android:text="C"
                        android:textColor="@color/Note2"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/bb1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:gravity="center"
                        android:text="("
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/niceYellow"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/bb2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:gravity="center"
                        android:text=")"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/niceYellow"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/bsin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#36454F"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="sin"
                        android:textColor="@color/niceYellow"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textAllCaps="false">

                    </TextView>

                    <TextView
                        android:id="@+id/bcos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="#36454F"
                        android:text="cos"
                        android:gravity="center"
                        android:textColor="@color/niceYellow"
                        android:textSize="20sp">

                    </TextView>

                    <TextView
                        android:id="@+id/btan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="#36454F"
                        android:gravity="center"
                        android:text="tan"
                        android:textColor="@color/niceYellow"
                        android:textSize="23sp">

                    </TextView>

                    <TextView
                        android:id="@+id/blog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#36454F"
                        android:text="log"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:textAllCaps="false"
                        android:textColor="@color/niceYellow"
                        android:textSize="23sp">

                    </TextView>

                    <TextView
                        android:id="@+id/bln"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="ln"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:textColor="@color/niceYellow"
                        android:textSize="30sp">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/bfact"
                        android:textAllCaps="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@color/grey"
                        android:text="X!"
                        android:textColor="@color/niceYellow"
                        android:textSize="30sp">

                    </TextView>

                    <TextView
                        android:id="@+id/bsquare"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="x²"
                        android:textAllCaps="false"
                        android:textColor="@color/niceYellow"
                        android:textSize="30sp">

                    </TextView>

                    <TextView
                        android:id="@+id/bsqrt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@color/grey"
                        android:gravity="center"
                        android:focusable="true"
                        android:clickable="true"
                        android:text="√"
                        android:textColor="@color/niceYellow"
                        android:textSize="30dp">

                    </TextView>

                    <TextView
                        android:id="@+id/binv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:background="@color/grey"
                        android:text="1/X"
                        android:textColor="@color/niceYellow"
                        android:textSize="21sp">

                    </TextView>

                    <TextView
                        android:id="@+id/bdiv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:background="@color/grey"
                        android:text="÷"
                        android:textColor="@color/niceYellow"
                        android:textSize="35sp">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/b7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:background="@color/background2.1"
                        android:text="7"
                        android:textColor="@color/niceBlue"
                        android:textSize="35sp">

                    </TextView>

                    <TextView
                        android:id="@+id/b8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="1"
                        android:background="@color/background2.1"
                        android:text="8"
                        android:textColor="@color/niceBlue"
                        android:textSize="35sp">

                    </TextView>

                    <TextView
                        android:id="@+id/b9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background2.1"
                        android:text="9"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/niceBlue"
                        android:textSize="35sp">

                    </TextView>

                    <TextView
                        android:id="@+id/bmul"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@color/grey"
                        android:text="×"
                        android:textColor="@color/niceYellow"
                        android:textSize="35sp">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:id="@+id/b4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background2.1"
                        android:text="4"
                        android:textColor="@color/niceBlue"
                        android:textSize="35sp">

                    </TextView>

                    <TextView
                        android:id="@+id/b5"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background2.1"
                        android:text="5"
                        android:textColor="@color/niceBlue"
                        android:textSize="35sp">

                    </TextView>

                    <TextView
                        android:id="@+id/b6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@color/background2.1"
                        android:text="6"
                        android:textColor="@color/niceBlue"
                        android:textSize="35sp">

                    </TextView>

                    <TextView
                        android:id="@+id/bmin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:text="-"
                        android:textColor="@color/niceYellow"
                        android:textSize="40sp">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:id="@+id/b1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background2.1"
                        android:text="1"
                        android:textColor="@color/niceBlue"
                        android:textSize="35sp">

                    </TextView>

                    <TextView
                        android:id="@+id/b2"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background2.1"
                        android:text="2"
                        android:textColor="@color/niceBlue"
                        android:textSize="35sp">

                    </TextView>

                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:id="@+id/b3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background2.1"
                        android:text="3"
                        android:textColor="@color/niceBlue"
                        android:textSize="35sp">

                    </TextView>

                    <TextView
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/bplus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:text="+"
                        android:textColor="@color/niceYellow"
                        android:textSize="35sp">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/bpi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:text="π"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:textColor="@color/niceYellow"
                        android:textSize="35sp">

                    </TextView>

                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:id="@+id/b0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background2.1"
                        android:text="0"
                        android:textColor="@color/niceBlue"
                        android:textSize="35sp">

                    </TextView>

                    <TextView
                        android:id="@+id/bdot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:text="."
                        android:textAlignment="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:textColor="@color/niceYellow"
                        android:textSize="40sp">

                    </TextView>

                    <TextView
                        android:id="@+id/bequal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:text="="
                        android:textAlignment="center"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/niceYellow"
                        android:textSize="40sp">

                    </TextView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <!-- NavigationView (Drawer) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/notes_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/calback"
        app:headerLayout="@layout/nav_header_7"
        app:itemIconTint="#6B1834"
        app:itemTextColor="#A06206"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>