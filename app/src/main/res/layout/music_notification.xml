<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/audioItems"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/holderForBackground">

        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@id/music_image"
            android:maxLines="3"
            android:padding="8dp"
            android:text="File Name"
            android:textColor="@color/niceRed"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Name"
            android:textSize="15sp"
            android:maxLines="2"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/songName"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/artistName"
            android:textColor="@color/copy2"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/previousSong"
            android:src="@drawable/song_skip_previous"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="15dp"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/playPause"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/previousSong"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/nextSong"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/song_skip_next"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/playPause"
            android:layout_marginStart="20dp" />



        <ImageView
            android:layout_width="210dp"
            android:layout_height="200dp"
            android:maxWidth="230dp"
            android:maxHeight="200dp"
            android:id="@+id/music_image"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


</RelativeLayout>